<AnchorPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.view.registration.RegisterController">
    <children>
        <AnchorPane prefHeight="82.0" prefWidth="614.0" style="-fx-background-color: #E96151;">
            <children>
                <ImageView fx:id="logoView" fitHeight="82.0" fitWidth="97.0" layoutX="517.0" layoutY="1.0" pickOnBounds="true" preserveRatio="true" />
                <Label layoutX="14.0" layoutY="27.0" text="User Registration" textFill="#fcf5f5">
                    <font>
                        <Font name="Georgia Bold" size="24.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>

        <Label layoutX="142.0" layoutY="104.0" text="First Name">
            <font>
                <Font size="13.0" />
            </font>
        </Label>
        <TextField fx:id="firstnameTextField" layoutX="139.0" layoutY="123.0" prefHeight="25.0" prefWidth="336.0" promptText="First Name" style="-fx-focus-color: #000000;" AnchorPane.bottomAnchor="452.0" AnchorPane.leftAnchor="139.0" AnchorPane.rightAnchor="139.0" AnchorPane.topAnchor="123.0" />


        <Label layoutX="142.0" layoutY="159.0" text="Last Name">
            <font>

                <Font size="13.0" />
            </font>
        </Label>
        <TextField fx:id="lastnameTextField" layoutX="139.0" layoutY="185.0" prefHeight="25.0" prefWidth="336.0" promptText="Last Name" style="-fx-focus-color: #000000;" AnchorPane.leftAnchor="139.0" AnchorPane.rightAnchor="139.0" />


        <Label layoutX="139.0" layoutY="223.0" text="Phone Number">
            <font>
                <Font size="13.0" />
            </font>
        </Label>
        <TextField fx:id="phoneTextField" layoutX="139.0" layoutY="252.0" prefHeight="25.0" prefWidth="336.0" promptText="Phone Number" style="-fx-focus-color: #000000;" />


        <Label layoutX="139.0" layoutY="293.0" text="Username">
            <font>
                <Font size="13.0" />
            </font>
        </Label>
        <TextField fx:id="usernameTextField" layoutX="139.0" layoutY="323.0" prefHeight="25.0" prefWidth="336.0" promptText="Username" style="-fx-focus-color: #000000;" />


        <Label layoutX="139.0" layoutY="366.0" text="Password">
            <font>
                <Font size="13.0" />
            </font>
        </Label>
        <PasswordField fx:id="setPasswordField" layoutX="139.0" layoutY="391.0" prefHeight="25.0" prefWidth="336.0" promptText="Password" style="-fx-focus-color: #000000;" />


        <Label layoutX="139.0" layoutY="434.0" text="Confirm Password">
            <font>
                <Font size="13.0" />
            </font>
        </Label>

        <PasswordField fx:id="confirmPasswordField" layoutX="139.0" layoutY="459.0" prefHeight="25.0" prefWidth="336.0" promptText="Confirm Password" style="-fx-focus-color: #000000;" />


        <Button fx:id="registerButton" layoutX="139.0" layoutY="504.0" mnemonicParsing="false" onAction="#registerButtonOnAction" prefHeight="25.0" prefWidth="336.0" style="-fx-background-color: #E96151;" text="Register" textFill="#fcfafa">
            <font>
                <Font size="13.0" />
            </font>
        </Button>

        <Button fx:id="closeButton" layoutX="139.0" layoutY="544.0" mnemonicParsing="false" onAction="#closeOnAction" prefHeight="25.0" prefWidth="336.0" style="-fx-background-color: #E96151;" text="Close" textFill="#fcfafa">
            <font>
                <Font size="13.0" />
            </font>
        </Button>

        <Label fx:id="registrationMessageLabel" alignment="CENTER" layoutY="94.0" prefHeight="17.0" prefWidth="600.0" textFill="#a0e32b">
            <font>
                <Font size="13.0" />
            </font>
        </Label>

        <Label fx:id="confirmPasswordLabel" alignment="CENTER" layoutX="203.0" layoutY="366.0" prefHeight="19.0" prefWidth="271.0" textFill="#f72e0a">
            <font>
                <Font size="13.0" />
            </font>
        </Label>


    </children>
</AnchorPane>
