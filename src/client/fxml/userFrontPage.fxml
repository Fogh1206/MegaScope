<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="600.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="client.view.frontPage.FrontPageController">
    <bottom>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER" spacing="80.0">
                    <children>
                        <Button mnemonicParsing="false"
                                onAction="#onBookMovieButton" prefWidth="100.0"
                                style="-fx-background-color: #E96151;"
                                text="Book movie" textAlignment="CENTER"
                                textFill="WHITE">
                            <HBox.margin>
                                <Insets/>
                            </HBox.margin>
                            <effect>
                                <Glow/>
                            </effect>
                            <font>
                                <Font size="13.0"/>
                            </font>
                        </Button>
                        <Button fx:id="loginButton" mnemonicParsing="false"
                                onAction="#onLoginButton" prefWidth="100.0"
                                style="-fx-background-color: #E96151;"
                                text="Log in" textAlignment="CENTER"
                                textFill="WHITE">
                            <effect>
                                <Glow/>
                            </effect>
                            <font>
                                <Font size="13.0"/>
                            </font>
                        </Button>
                    </children>
                </HBox>
                <HBox fx:id="adminContainer" alignment="CENTER" spacing="80.0">
                    <children>
                        <Button mnemonicParsing="false" prefWidth="100.0"
                                style="-fx-background-color: #E96151;"
                                text="Add movie" textAlignment="CENTER"
                                textFill="WHITE">
                            <effect>
                                <Glow/>
                            </effect>
                            <font>
                                <Font size="13.0"/>
                            </font>
                        </Button>
                        <Button mnemonicParsing="false" prefWidth="100.0"
                                style="-fx-background-color: #E96151;"
                                text="Edit movie" textAlignment="CENTER"
                                textFill="WHITE">
                            <effect>
                                <Glow/>
                            </effect>
                            <font>
                                <Font size="13.0"/>
                            </font>
                        </Button>
                        <Button layoutX="350.0" layoutY="10.0"
                                mnemonicParsing="false" prefHeight="29.0"
                                prefWidth="110.0"
                                style="-fx-background-color: #E96151;"
                                text="Remove movie" textAlignment="CENTER"
                                textFill="WHITE">
                            <effect>
                                <Glow/>
                            </effect>
                            <font>
                                <Font size="13.0"/>
                            </font>
                        </Button>
                    </children>
                </HBox>
            </children>
            <BorderPane.margin>
                <Insets bottom="10.0" top="5.0"/>
            </BorderPane.margin>
        </VBox>
    </bottom>
    <left>
        <TableView fx:id="movieTableView" maxWidth="-Infinity"
                   onMouseClicked="#setSelected" prefHeight="246.0"
                   prefWidth="550.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets left="25.0" right="25.0" top="10.0"/>
            </BorderPane.margin>
            <columns>
                <TableColumn fx:id="movieTitleCol" prefWidth="120.0"
                             text="Movie title"/>
                <TableColumn fx:id="dateOfReleaseCol" prefWidth="99.0"
                             text="Released"/>
                <TableColumn fx:id="mainactorsCol" prefWidth="95.0"
                             text="Main actors"/>
                <TableColumn fx:id="descriptionCol" prefWidth="131.0"
                             text="Description"/>
                <TableColumn fx:id="timeCol" prefWidth="37.0" text="Time "/>
                <TableColumn fx:id="DateCol" prefWidth="67.0" text="Date"/>
            </columns>
        </TableView>
    </left>
    <right>
        <VBox fx:id="Profile" prefHeight="200.0" prefWidth="100.0"
              visible="false" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="StupidButton" mnemonicParsing="false"
                        onAction="#StupidAction" text="Button"/>
            </children>
        </VBox>
    </right>
    <top>
        <VBox prefHeight="138.0" prefWidth="600.0"
              BorderPane.alignment="CENTER">
            <children>
                <HBox fx:id="UserHBox" alignment="CENTER_LEFT" prefHeight="50.0"
                      prefWidth="600.0" style="-fx-background-color: #E96151;">
                    <children>
                        <Label fx:id="LabelHAHA" alignment="CENTER"
                               prefHeight="49.0" prefWidth="223.0"
                               text="UsernameLabel" textAlignment="CENTER"/>
                        <Button fx:id="myProfileButton" alignment="CENTER_RIGHT"
                                contentDisplay="CENTER" mnemonicParsing="false"
                                onAction="#goToMyProfile" prefHeight="25.0"
                                prefWidth="74.0"
                                style="-fx-background-color: #E96151;"
                                text="My Profile" textAlignment="CENTER">
                            <effect>
                                <Glow level="0.55">
                                    <input>
                                        <DropShadow/>
                                    </input>
                                </Glow>
                            </effect>
                        </Button>
                        <Button fx:id="manageUsersButton"
                                alignment="CENTER_RIGHT" contentDisplay="CENTER"
                                layoutX="233.0" layoutY="22.0"
                                mnemonicParsing="false"
                                onAction="#goToMyProfile" prefHeight="25.0"
                                prefWidth="90.0"
                                style="-fx-background-color: #E96151;"
                                text="Manage users" textAlignment="CENTER">
                            <effect>
                                <Glow level="0.55">
                                    <input>
                                        <DropShadow/>
                                    </input>
                                </Glow>
                            </effect>
                            <HBox.margin>
                                <Insets left="20.0" right="20.0"/>
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>
                <AnchorPane fx:id="SearchBox" prefHeight="90.0"
                            prefWidth="600.0"
                            style="-fx-background-color: #E96151;">
                    <children>
                        <Label layoutX="24.0" layoutY="8.0" text="Movies"
                               textFill="#fcf5f5">
                            <font>
                                <Font name="System Bold" size="18.0"/>
                            </font>
                        </Label>
                        <TextField fx:id="searchBar" layoutX="24.0"
                                   layoutY="41.0" prefHeight="29.0"
                                   prefWidth="339.0" promptText="Search movie">
                            <font>
                                <Font size="13.0"/>
                            </font>
                        </TextField>
                        <DatePicker fx:id="datePick" layoutX="399.0"
                                    layoutY="42.0" onAction="#onDatePick"
                                    prefHeight="27.0" prefWidth="181.0"
                                    promptText="Select date"/>
                        <Button layoutX="362.0" layoutY="43.0"
                                mnemonicParsing="false" onAction="#Search"
                                prefHeight="25.0" prefWidth="37.0" text="?"/>
                    </children>
                </AnchorPane>
            </children>
        </VBox>
    </top>
</BorderPane>
